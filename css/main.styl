teal7 = #00796B;
teal9 = #004D40;
pink = #D81B60;
blueligth = #0F9982;
@font-face {
    font-family: 'icomoon';
    src:url('../fonts/icomoon.eot?-ner4ex');
    src:url('../fonts/icomoon.eot?#iefix-ner4ex') format('embedded-opentype'),
        url('../fonts/icomoon.woff?-ner4ex') format('woff'),
        url('../fonts/icomoon.ttf?-ner4ex') format('truetype'),
        url('../fonts/icomoon.svg?-ner4ex#icomoon') format('svg');
    font-weight: normal;
    font-style: normal;
}

body{
    background: #f5f5f5;
}

h1{
    text-align: center;
}
.secondary-title{
    margin-top:  2em;
}
.main-header{
    background: teal7;
    margin: 0;
    padding: 0;
    h1{
        margin: 0;
        padding: 1em;
        color: white;
    }
}

.main-options{
    h2{
        color: teal9;
        text-align: center;
    }

    .options{
        margin-left: 17%;
        margin-top: 3.5em;
        li{
            list-style: none;
            display: inline-block;
            background:teal9;
            padding: 2em;
            margin-left: 2em;
            border-radius: 10px;
            a{
                text-decoration: none;
                display: block;
                &:before{
                    font-family:"icomoon";
                    color: white;
                    font-size: 7em;
                    padding: 0.5em;
                }
                &:hover{
                    &:before{
                        color: blueligth;
                    }
                }
            }

            span{
                display: block;
                color: white;
                font-size: 1.5em;
                margin-bottom: 1.5em;
                text-align: center;
            }
        }
    }
}

.icon-dice:before {
    content: "\e915";
}

.icon-pacman:before {
    content: "\e916";
}

.icon-database:before {
    content: "\e964";
}